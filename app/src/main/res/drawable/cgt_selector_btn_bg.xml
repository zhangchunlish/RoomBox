<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <corners android:radius="5dip" />
            <solid android:color="@color/color_fdfdfd"/>
            <stroke android:width="1dip" android:color="@color/color_cccccc"/>
        </shape>
        
     </item>
     
    <item android:state_focused="true">
        <shape>
            <corners android:radius="5dip" />
            <solid android:color="@color/color_fdfdfd"/>
            <stroke android:width="1dip" android:color="@color/color_cccccc"/>
        </shape>
        
     </item>
     
    <item>
        <shape>
            <corners android:radius="5dip" />
            <gradient 
                android:startColor="@color/white" 
                android:centerColor="@color/color_cccccc"
                android:endColor="@color/white"
                android:type="linear" 
                android:angle="90"
                android:centerX="0.5"
                android:centerY="0.5"/>
            <stroke android:width="1dip" android:color="@color/color_cccccc"/>
        </shape>
    </item>

</selector>